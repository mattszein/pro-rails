<div id="<%= dom_id account %>">
  <%= render(Core::CardComponent.new({padding: :sm})) do %>
  <dl class="flex flex-col dark:divide-gray-700 text-left gap-4 divide-y divide-gray-200">
      <div>
          <dt class="md:text-md">Email</dt>
          <dd class="text-md font-semibold"><%= account.email %></dd>
      </div>
      <div>
          <dt class="md:text-md">Status</dt>
          <dd class="text-md font-semibold"><%= render(Core::BadgeComponent.new("Active", options: {})) %></dd>
      </div>
  </dl>
  <% end %>
</div>
