<tr id="<%= ActionView::RecordIdentifier.dom_id(ticket) %>">
  <%= render Core::TableCellComponent.new do %>
    <%= ticket.title %>
  <% end %>

  <%= render Core::TableCellComponent.new do %>
    <%= ticket.category.humanize %>
  <% end %>

  <%= render Core::TableCellComponent.new do %>
    <%= ticket.description %>
  <% end %>

  <%= render Core::TableCellComponent.new do %>
    <%= render(Core::BadgeComponent.new(ticket.status, options: {custom_style: {theme: ticket_status_theme(ticket.status)}})) %>
  <% end %>

  <%= render Core::TableCellComponent.new do %>
    <%= render(Core::LinkComponent.new(name: "Show", url: support_ticket_path(ticket), options: {custom_style: {style: :as_button, theme: :show, size: :xs}})) %>
    <%= render(Core::LinkComponent.new(name: "Edit", url: edit_support_ticket_path(ticket), options: {data: {turbo_frame: "modal"}, custom_style: {style: :as_button, theme: :edit, size: :xs}})) %>
  <% end %>
</tr>
