<div class="flex gap-3" id="<%= dom_id(message) %>">
  <div class="flex-1 min-w-0">
    <div class="flex items-center gap-2 mb-1 flex-wrap">
      <span class="font-medium text-slate-800 dark:text-slate-200"><%= author_display_name %></span>
      <%= author_badge %>
      <span class="text-xs text-slate-500 dark:text-slate-400"><%= timestamp %></span>
      <!-- Edit action - only shown to message author -->
      <turbo-show when="current-user-id" is="<%= message.account_id %>">
        <div class="ml-auto flex gap-2">
          Edit
        </div>
      </turbo-show>
    </div>
    <div class="<%= message_background %> rounded-2xl rounded-tl-md p-3">
      <%= simple_format(message.content, class: "whitespace-pre-wrap break-words") %>
    </div>
  </div>
</div>
