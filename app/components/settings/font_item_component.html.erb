<% color = CATEGORY_COLORS[font.category.to_sym] %>
<div class="flex flex-col items-center">
  <button
    data-font-target="button"
    data-font-id="<%= font_id %>"
    data-action="click->font#selectFont"
    class="relative group peer transition-all duration-200 pb-2 hover:scale-105 selected:scale-110 font-<%= font_id %> selected">
    <div class="h-20 w-20 rounded-lg p-1 transition-all duration-300 bg-slate-700/50 shadow-md group-[.selected]:ring-2 group-[.selected]:shadow-xl <%= color %>">
      <span class="relative w-full h-full rounded-md bg-slate-800/80 flex items-center justify-center font-semibold text-slate-200 group-[.selected]:text-white text-3xl">
        Aa
      </span>
    </div>
  </button>
  <p class="text-primary-700 peer-[.selected]:text-primary-800 dark:text-primary-100 dark:peer-[.selected]:text-primary-50 peer-[.selected]:font-semibold peer-[.selected]:border-b-2 peer-[.selected]:border-b-secondary-500 dark:peer-[.selected]:border-b-secondary-300"><%= font.name %></p>
  <p class="text-slate-600 peer-[.selected]:text-slate-700 dark:text-slate-200 dark:peer-[.selected]:text-slate-100 peer-[.selected]:font-semibold"><%= font.description %></p>
</div>
