<!-- Conversation Header -->
<div class="pb-6 border-b border-slate-200 dark:border-slate-700">
  <h3 class="text-xl font-semibold text-slate-800 dark:text-slate-200 flex items-center gap-2">
    <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h1a4 4 0 010 8h-1m-15-8h1a4 4 0 000-8H3m6 8l4-4m0 0l4 4m-4-4v12"></path>
    </svg>
    <%= title %>
  </h3>
</div>
<!-- Messages Container -->
<div class="space-y-6 max-h-96 overflow-y-auto" id="<%= dom_id(conversation) %>_messages">
  <%= helpers.turbo_stream_from conversation %>
  <% if messages.any? %>
    <%= render(collection: messages, partial: "conversation/message") %>
  <% else %>
    <div class="text-center py-8 text-slate-500 dark:text-slate-400">
      <svg class="w-12 h-12 mx-auto mb-3 text-slate-300 dark:text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
      </svg>
      <p>No messages yet. Start the conversation!</p>
    </div>
  <% end %>
</div>
<!-- Message Input Form  -->
<div id="message_form_container">
  <%= content %>
</div>
