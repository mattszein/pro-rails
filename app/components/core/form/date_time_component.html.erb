<div class="space-y-8">
  <div>
    <div data-controller="date-picker"
         data-date-picker-timepicker-value="true"
         data-date-picker-show-today-button-value="true"
         data-date-picker-show-clear-button-value="true"
         class="relative w-full max-w-sm">
      <input id="<%= @object_name %>_<%= @method_name %>" name="<%= @object_name %>[<%= @method_name %>]" class="block w-full rounded-lg border-0 px-3 py-2 text-neutral-900 shadow-sm ring-1 ring-inset ring-neutral-300 placeholder:text-neutral-500 focus:ring-2 focus:ring-neutral-600 outline-hidden leading-6 dark:ring-neutral-600 dark:placeholder-neutral-300 dark:text-white dark:focus:ring-neutral-500 text-base sm:text-sm <%= "disabled:opacity-50 disabled:cursor-not-allowed" if @options[:disabled] %>"
             value="<%= @form.object.send(@method_name)&.strftime("%m/%d/%Y %I:%M %p") %>"
             data-date-picker-target="input"
             data-date-initial-date-value="<%= @form.object.send(@method_name)&.strftime("%Y-%m-%d %H:%M") %>"
             data-date-initial-time-value="<%= @form.object.send(@method_name)&.strftime("%H:%M") %>"
             placeholder="Select date & time..."
             <%= "disabled" if @options[:disabled] %>>
      <div class="pointer-events-none absolute inset-y-0 right-3 flex items-center justify-center opacity-80 text-text-body">
        <svg xmlns="http://www.w3.org/2000/svg" class="size-4" viewBox="0 0 18 18"><g fill="currentColor"><path d="M5.75,3.5c-.414,0-.75-.336-.75-.75V.75c0-.414,.336-.75,.75-.75s.75,.336,.75,.75V2.75c0,.414-.336,.75-.75,.75Z"></path><path d="M12.25,3.5c-.414,0-.75-.336-.75-.75V.75c0-.414,.336-.75,.75-.75s.75,.336,.75,.75V2.75c0,.414-.336,.75-.75,.75Z"></path><path d="M13.75,2H4.25c-1.517,0-2.75,1.233-2.75,2.75V13.25c0,1.517,1.233,2.75,2.75,2.75H13.75c1.517,0,2.75-1.233,2.75-2.75V4.75c0-1.517-1.233-2.75-2.75-2.75Zm0,12.5H4.25c-.689,0-1.25-.561-1.25-1.25V7H15v6.25c0,.689-.561,1.25-1.25,1.25Z"></path></g></svg>
      </div>
    </div>
  </div>
</div>
